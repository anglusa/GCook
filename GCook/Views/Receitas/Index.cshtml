@model IEnumerable<GCook.Models.Receita>

@{
    ViewData["Title"] = "Receitas";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Receitas</h1>
<h4>Listagem</h4>


<p class="my-3">
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle me-2"></i>
        Adicionar
    </a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TempoPreparo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rendimento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dificuldade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Foto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Preparo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Categoria)
            </th>
            <th style="width: 150px;">Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Descricao)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TempoPreparo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Rendimento)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Dificuldade)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Foto)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Preparo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Categoria.Nome)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="me-2 text-decoration-none">
                        <i class="bi bi-pencil text-warning me-2" title="Alterar"></i>
                    </a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="me-2 text-decoration-none">
                        <i class="bi bi-question-circle text-info me-2" title="Ver Detalhes"></i>
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="me-2 text-decoration-none">
                        <i class="bi bi-trash3-fill text-danger" title="Excluir"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
